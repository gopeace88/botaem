{
  "name": "botame-admin",
  "version": "1.0.0",
  "description": "보탬e 플레이북 관리 도구 (관리자용)",
  "main": "out/main/main.js",
  "scripts": {
    "dev": "electron-vite dev -c electron-vite.config.js",
    "build": "electron-vite build -c electron-vite.config.js",
    "preview": "electron-vite preview -c electron-vite.config.js",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "benchmark": "node -r esbuild-runner/register benchmarks/playbook-execution.bench.ts",
    "benchmark:startup": "node -r esbuild-runner/register benchmarks/startup-time.bench.ts",
    "benchmark:all": "pnpm run benchmark && pnpm run benchmark:startup",
    "validate-playbooks": "node -r esbuild-runner/register scripts/validate-playbooks.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@botame/core": "workspace:*",
    "@botame/player": "workspace:*",
    "@botame/recorder": "workspace:*",
    "@botame/types": "workspace:*",
    "@supabase/supabase-js": "^2.86.0",
    "@types/winston": "^2.4.4",
    "clsx": "^2.1.0",
    "dotenv": "^17.2.3",
    "idb": "^8.0.3",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.303.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.7.3",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "pg": "^8.16.3",
    "playwright": "^1.57.0",
    "postcss": "^8.4.33",
    "supabase": "^2.65.6",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "zod": "^4.3.5"
  },
  "build": {
    "appId": "com.botame.admin",
    "productName": "보탬e 관리자",
    "directories": {
      "output": "release"
    },
    "publish": {
      "provider": "github",
      "owner": "gopeace88",
      "repo": "botaem"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}